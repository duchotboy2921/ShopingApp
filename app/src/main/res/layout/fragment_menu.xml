<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/header_fragment_menu"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/red">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/lacda" />
        <TextView
            android:id="@+id/txt_username"
            android:layout_toRightOf="@+id/img_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="50dp"
            android:textColor="@color/white"
            android:text="Tên nè"
            android:textSize="18sp"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/layout_upload_product"
        app:layout_constraintTop_toBottomOf="@+id/header_fragment_menu"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/add_product"
            android:layout_margin="8dp"/>
        <TextView
            android:textSize="15sp"
            android:layout_margin="8dp"
            android:text="Đăng bán sản phẩm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:id="@+id/line_0"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_upload_product"
        android:background="@color/gray"/>

    <LinearLayout
        android:id="@+id/layout_onsale_products"
        app:layout_constraintTop_toBottomOf="@+id/layout_upload_product"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/sale"
            android:layout_margin="8dp"/>
        <TextView
            android:textSize="15sp"
            android:layout_margin="8dp"
            android:text="Danh sách sản phẩm đăng bán"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:id="@+id/line_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_onsale_products"
        android:background="@color/gray"/>

    <LinearLayout
        android:id="@+id/layout_purchased_products"
        app:layout_constraintTop_toBottomOf="@+id/line_1"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/purchase"
            android:layout_margin="8dp"/>
        <TextView
            android:textSize="15sp"
            android:layout_margin="8dp"
            android:text="Sản phẩm đã mua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:id="@+id/line_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_purchased_products"
        android:background="@color/gray"/>

    <LinearLayout
        android:id="@+id/layout_log_out"
        app:layout_constraintTop_toBottomOf="@+id/line_2"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/logout"
            android:layout_margin="8dp"/>
        <TextView
            android:textSize="15sp"
            android:layout_margin="8dp"
            android:text="Đăng xuất"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:id="@+id/line_3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_log_out"
        android:background="@color/gray"/>
</androidx.constraintlayout.widget.ConstraintLayout>